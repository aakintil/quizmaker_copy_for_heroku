<div class="row">
	<div class="span6"><h1>Recent Events</h1></div>
	<div class="span6"><%= link_to '+ New Event', new_event_path, :class => 'btn btn-primary pull-right', :id => 'new-event-button' %></div>
</div>

<br/>

<div class="row">
<div id="events" class="span12">
	
	<div class="row events-header">
		<div class="span4 event-key ev-title"><a href="#" class="sort-key">Event Title</a></div>
		<div class="span2 event-key ev-quizzes"><a href="#" class="sort-key"># of Quizzes</a></div>
		<div class="span3 event-key ev-by"><a href="#" class="sort-key">Generated By</a></div>
		<div class="span2 event-key ev-date"><a href="#" class="sort-key selected-desc">Created On</a></div>
	</div>
	
	<% for event in @events %>
			<div class="row event-box">
			<a href=<%= event_path(event) %>>
				
				<div class="span4 ev-title"><%= event.title %></div>
				<div class="span2 ev-quizzes"><%= event.num_quizzes %></div>
				<% if event.user != nil %>
					<div class="span3 ev-by"><%= event.user.name %></div>
				<% else %>
				<div class="span3 ev-by"> No User Name </div>
				<% end %>
				<div class="span2 ev-date"><%= event.created_at.strftime("%D") %></div>
			
			</a>
			</div> <!-- End of event box -->
  <% end %>
		
</div> <!-- End of events -->
</div>
<br/>

<%= link_to '+ New Event', new_event_path, :class => 'btn btn-primary', :id => 'new-event-button' %>