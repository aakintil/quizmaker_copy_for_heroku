<!-- Script to enable/disable Sign-up button -->
<script type="text/javascript" charset="utf-8">
(function() {
    $('.sign-up-field').keyup(function() {

        var empty = false;
        $('.sign-up-field').each(function() {
            if ($(this).val() == '') {
                empty = true;
            }
        });

        if (empty) {
            $('#sign-up-button').attr('disabled', true);
        } else {
            $('#sign-up-button').attr('disabled', false);
        }
    });
})();
</script>